@{
    ViewData["Title"] = "Login";
}

@section AddStyles{

    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}
@model HalloDocEntities.ViewModels.LoginViewModel

<div class="login-area w-100">
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn back-btn">
        <img src="~/images/backIcon.svg" alt="">
        Back
    </a>
    <h1 class="mb-4 mt-2 h2 text-center">Login To Your Account</h1>
    <p class="text-center text-danger fw-bold">@ViewBag.Message</p>   
    <form class="d-flex flex-column" asp-action="CheckLogin" asp-controller="Login">
        <div class="form-floating mb-4">
            <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="name@example.com">
            <label for="Email">Email</label>
            <img src="~/images/usernameIcon.svg" alt="" class="label-icon">
        </div>
        <div class="form-floating mb-4">
            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password">
            <label for="Password">Password</label>
            <img src="~/images/passwordShowIcon.svg" alt="" class="label-icon">
        </div>

        <input type="submit" class="btn btn-info rounded-3 text-white fw-bold w-100 py-3 mb-4" value="Submit">
        <a asp-area="" asp-controller="Login" asp-action="ForgotPassword" class="align-self-center forgot-pass text-info fw-bold">
            Forgot
            Password?
        </a>
    </form>
</div>