@{
    ViewData["Title"] = "Forgot Password";
}

@section AddStyles{
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

@model HalloDocServices.ViewModels.ForgotPasswordViewModel

<div class="login-area w-100">
    @*<a asp-area="" asp-controller="Login" asp-action="Index" class="back-btn btn  ">
        <img src="~/images/backIcon.svg" alt="">
        Back
    </a>*@

    <button class="btn back-btn d-flex align-items-center" onclick="window.history.back()">
        <span class="material-symbols-outlined text-info fs-6">
            arrow_back_ios
        </span>
        <span>Back</span>
    </button>

    <h1 class="mb-4 mt-2 h2 text-center">Reset Your Password</h1>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            @ViewBag.Message
        </div>
    }

    <form asp-action="ForgotPassword" class="d-flex flex-column">

        <div class="form-floating mb-4">
            <input type="email" asp-for="Email" class="form-control transparent" id="Email" placeholder="name@example.com">
            <label asp-for="Email">Email</label>
            <span class="material-symbols-outlined text-body icon-label">
                account_circle
            </span>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <input type="submit" value="Reset Password" class=" btn btn-info text-white fw-bold w-100 py-3 mb-4 fw-500">
        
        <a asp-area="" asp-controller="Login" asp-action="Index" class="back-btn btn  ">
            <img src="~/images/backIcon.svg" alt="">
            Back To Login
        </a>
    </form>
</div>