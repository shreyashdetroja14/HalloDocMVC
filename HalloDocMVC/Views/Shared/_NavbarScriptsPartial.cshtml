<script>
    const url = window.location.href.toLowerCase();
    console.log(url);

    if (url.includes('dashboard')) {
        const profileTabs = document.querySelectorAll('.dashboard');
        profileTabs.forEach(tab => {
            tab.classList.add('active');
        });
    }

    if(url.includes('profile')){
        const profileTabs = document.querySelectorAll('.myprofile');
        profileTabs.forEach(tab => {
            tab.classList.add('active');
        });
    }

    if(url.includes('providers')){
        const providerTabs = document.querySelectorAll('.providers');
        providerTabs.forEach(tab => {
            tab.classList.add('active');
        })
    }
    
    if(url.includes('access')){
        const accessTabs = document.querySelectorAll('.access');
        accessTabs.forEach(tab => {
            tab.classList.add('active');
        })
    }
    
    if(url.includes('vendors')){
        const vendorTabs = document.querySelectorAll('.vendors');
        vendorTabs.forEach(tab => {
            tab.classList.add('active');
        })
    }
    
    if(url.includes('providerlocation')){
        const providerTabs = document.querySelectorAll('.providers');
        providerTabs.forEach(tab => {
            tab.classList.remove('active');
        })

        const locationTabs = document.querySelectorAll('.location');
        locationTabs.forEach(tab => {
            tab.classList.add('active');
        })
    }
</script>