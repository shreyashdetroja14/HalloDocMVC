@model List<HalloDocServices.ViewModels.AdminViewModels.RequestShiftRowViewModel>

<div class="requestShifts-md d-none d-md-block">
    <form asp-controller="Providers">
        <input type="submit" id="approve" asp-action="ApproveShifts" hidden/>
        <input type="submit" id="delete" asp-action="DeleteShifts" hidden/>
        <table class="table">
            <thead style="background-color: #FAF9F6;">
                <tr class="requestshiftsheader">
                    <th scope="col" class="p-3">
                        <input type="checkbox" class="form-check-input" id="selectAll">
                    </th>
                    <th scope="col" class="py-3">Staff</th>
                    <th scope="col" class="py-3">Day</th>
                    <th scope="col" class="py-3">Time</th>
                    <th scope="col" class="py-3">Region</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shift in Model)
                {
                    <tr class="bg-white">
                        <td class="p-3">
                            <input type="checkbox" class="form-check-input selectShift" name="shiftDetailIds" value="@shift.ShiftDetailId">
                        </td>
                        <td class="py-3">@shift.Staff</td>
                        <td class="py-3">@shift.Day</td>
                        <td class="py-3">@shift.Time</td>
                        <td class="py-3">@shift.RegionName</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

<div class="requestfiles d-md-none">
    <form asp-controller="Providers">
        <input type="submit" id="approve-sm" asp-action="ApproveShifts" hidden />
        <input type="submit" id="delete-sm" asp-action="DeleteShifts" hidden />
    @foreach (var shift in Model)
    {
        <div class="shift-item d-flex flex-column p-3 mb-1">
            <div class="mb-3">
                <input type="checkbox" class="form-check-input" name="shiftDetailIds" value="@shift.ShiftDetailId">
                <span class="fs-5">@shift.Staff</span>
            </div>
            <div class="mb-2">
                <span>@shift.Day</span>
            </div>
            <div class="mb-2">
                <span>@shift.Time</span>
            </div>
            <div class="mb-2">
                <span>@shift.RegionName</span>
            </div>

        </div>
    }
    </form>
</div>
