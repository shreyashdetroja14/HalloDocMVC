@model HalloDocServices.ViewModels.AdminViewModels.CreateShiftViewModel

<div class="modal fade" data-bs-backdrop="static" id="view-shift-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3">
            <div class="modal-header fw-bold bg-info text-white">
                <h1 class="modal-title fs-5 " id="modaltitle">View Shift</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div id="editShiftError"></div>

                <form id="edit-shift-form">
                    <input type="number" asp-for="ShiftDetailId" hidden/>
                    <input type="number" asp-for="PhysicianId" hidden/>
                    <div class="form-floating mb-3">
                        <select class="form-select mb-3" id="view-shift-region-list" asp-for="RegionId" asp-items="Model.RegionList" disabled>
                            <option value="">Select Region</option>
                        </select>
                        <label for="view-shift-region-list">Regions</label>
                        <span class="text-danger" asp-validation-for="RegionId"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select class="form-select selectlist mb-3" id="view-shift-physician-list" asp-for="PhysicianId" asp-items="Model.PhysicianList" disabled>
                            <option value="">Select Physician</option>
                        </select>
                        <label for="view-shift-physician-list">Physicians</label>
                        <span class="text-danger" asp-validation-for="PhysicianId"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="date" asp-for="ShiftDate" class="form-control view-shift" id="ViewShiftDate" placeholder="Shift Date" min="@(DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd"))">
                        <label for="ViewShiftDate">Shift Date</label>
                        <span class="text-danger" asp-validation-for="ShiftDate"></span>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="time" asp-for="StartTime" class="form-control view-shift" id="ViewStartTime" placeholder="Start Time">
                                <label for="ViewStartTime">Start Time</label>
                                <span class="text-danger" asp-validation-for="StartTime"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-floating mb-3">
                                <input type="time" asp-for="EndTime" class="form-control view-shift" id="ViewEndTime" placeholder="End Time">
                                <label for="ViewEndTime">End Time</label>
                                <span class="text-danger" asp-validation-for="EndTime"></span>
                            </div>
                            <div id="viewTimeError" style="color: red; display: none;" class="mb-3">End time must be later than start time.</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        
                        @if (!Model.IsOldShift)
                        {
                            @if (!Model.IsPhysician)
                            {
                                <button type="button" class="btn btn-info text-white ms-2" id="return-shift">Return</button>
                            }
                            <button type="button" class="btn btn-outline-info ms-2" id="edit-btn">Edit</button>
                            <button type="button" class="btn btn-info text-white ms-2" id="edit-shift">Save</button>
                            <input type="reset" value="Cancel" class="btn btn-outline-info ms-2" id="cancel-btn" />
                            @if (!Model.IsPhysician)
                            {
                                <button type="button" class="btn btn-danger text-white ms-2" id="delete-shift">Delete</button>
                            }
                        }

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>