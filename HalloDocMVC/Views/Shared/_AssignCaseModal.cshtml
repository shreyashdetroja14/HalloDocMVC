@model HalloDocServices.ViewModels.AdminViewModels.AssignCaseViewModel

<div class="modal fade" data-bs-backdrop="static" id="assign-case-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3">
            <div class="modal-header fw-bold bg-info text-white">
                @if (Model.IsTransferRequest == true)
                {
                    <h1 class="modal-title fs-5 " id="modaltitle">Transfer Request</h1>
                }
                else
                {
                    <h1 class="modal-title fs-5 " id="modaltitle">Assign Case</h1>
                }

                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="fs-6 text-secondary">To assign this request, search and select another Physician.</p>
                <form asp-action="@(Model.IsTransferRequest == true ? "TransferRequest" : "AssignCase")" class="shadow-none needs-validation" novalidate>
                    <input type="number" asp-for="RequestId" hidden />
                    <div class="form-floating mb-3">
                        <select asp-for="RegionId" class="form-select region-select" asp-items="@Model.RegionList" required>
                            <option value="" selected>All Regions</option>
                            
                        </select>
                        <label asp-for="RegionId">Narrow Search By Region</label>
                        <div class="invalid-feedback">
                            Please select a region.
                        </div>
                    </div>
                    <div class="mb-3">
                        <select asp-for="PhysicianId" class="form-select physician-select p-3" id="assign-physician-list" asp-items="@Model.PhysicianList" required>
                            <option value="" selected>Select Physician</option>
                            
                        </select>
                        <div class="invalid-feedback">
                            Please select a physician.
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="@Model.Description" class="form-control" placeholder="Description" id="" style="height: 100px"></textarea>
                        <label>Description</label>
                    </div>
                    <div class="d-flex justify-content-end">
                        <input type="submit" value="@(Model.IsTransferRequest == true ? "Transfer" : "Assign")" class="btn btn-info text-white" />
                        <button type="button" class="btn btn-outline-info ms-3" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



