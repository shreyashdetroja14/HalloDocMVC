
@model HalloDocServices.ViewModels.AdminViewModels.TransferToAdminViewModel

<div class="modal fade" data-bs-backdrop="static" id="transfer-request-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3">
            <div class="modal-header fw-bold bg-info text-white">
                <h1 class="modal-title fs-5 " id="modaltitle">Transfer Request</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>The request will be transferred back to admin.</p>
                <form asp-action="TransferToAdmin">
                    <input type="number" asp-for="@Model.RequestId" hidden />
                    <div class="form-floating mb-3">
                        <textarea asp-for="@Model.Description" class="form-control" placeholder="Reason to block" id="" style="height: 150px"></textarea>
                        <label>Description</label>
                    </div>
                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Confirm" class="btn btn-info text-white" />
                        <button type="button" class="btn btn-outline-info ms-3" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



