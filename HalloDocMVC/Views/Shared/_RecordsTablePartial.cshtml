@using HalloDocServices.ViewModels.AdminViewModels;

@model List<HalloDocServices.ViewModels.AdminViewModels.RecordRowViewModel>

@{
    var Pager = new PagerViewModel();
    int pageNumber = 0;

    if (ViewBag.PagerData != null)
    {
        Pager = ViewBag.PagerData;
        pageNumber = Pager.CurrentPage;
    }
}

<div class="records-table table-responsive d-none d-md-block">
    <table class="table mb-0">
        <thead style="background-color: #FAF9F6;">
            <tr class="providerslistheader">
                <th scope="col" class="p-3">Patient Name</th>
                <th scope="col" class="py-3">Requestor</th>
                <th scope="col" class="py-3">Date Of Service</th>
                <th scope="col" class="py-3">CloseCase Date</th>
                <th scope="col" class="py-3">Email</th>
                <th scope="col" class="py-3">Phone Number</th>
                <th scope="col" class="py-3">Address</th>
                <th scope="col" class="py-3">Zipcode</th>
                <th scope="col" class="py-3">Request Status</th>
                <th scope="col" class="py-3">Physician</th>
                <th scope="col" class="py-3">Physician Note</th>
                <th scope="col" class="py-3">Cancelled By Provider Note</th>
                <th scope="col" class="py-3">Admin Note</th>
                <th scope="col" class="py-3">Patient Note</th>
                <th scope="col" class="py-3 text-center" style="min-width:7rem">Delete Permanently</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr class="record-row">
                    <td class="p-3">
                        @item.PatientName
                    </td>
                    <td class="py-3">
                        @item.Requestor
                    </td>
                    <td class="py-3">
                        @item.DateOfService
                    </td>
                    <td class="py-3">
                        @item.CloseCaseDate
                    </td>
                    <td class="py-3">
                        @item.Email
                    </td>
                    <td class="py-3">
                        @item.PhoneNumber
                    </td>
                    <td class="py-3">
                        @item.Address
                    </td>
                    <td class="py-3">
                        @item.ZipCode
                    </td>
                    <td class="py-3">
                        @item.RequestStatus
                    </td>
                    <td class="py-3">
                        @item.PhysicianName
                    </td>
                    <td class="py-3">
                        @item.PhysicianNote
                    </td>
                    <td class="py-3">
                        @item.CancelledByProviderNote
                    </td>
                    <td class="py-3">
                        @item.AdminNote
                    </td>
                    <td class="py-3">
                        @item.PatientNote
                    </td>
                    <td class="py-3 text-center">
                        <a class="btn btn-outline-info">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>
<div class="records-mobile d-md-none mb-3">
    <div class="accordion accordion-flush bg-info" id="accordionFlushExample">
        @foreach(var item in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed d-flex flex-column align-items-start" type="button"
                            data-bs-toggle="collapse" data-bs-target="#record-@item.RequestId">
                        <span class="h6 mb-3">@item.PatientName</span>
                        <span>@item.Address</span>
                    </button>
                </h2>
                <div id="record-@item.RequestId" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                person
                            </span>
                            <span class="me-2">Requestor: </span>
                            <span class="h6">@item.Requestor</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                calendar_month
                            </span>
                            <span class="me-2">Date of Service: </span>
                            <span class="h6">@item.DateOfService</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                calendar_month
                            </span>
                            <span class="me-2">Close Case Date: </span>
                            <span class="h6">@item.CloseCaseDate</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                mail
                            </span>
                            <span class="me-2">Email: </span>
                            <span class="h6">@item.Email</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                call
                            </span>
                            <span class="me-2">Phone Number: </span>
                            <span class="h6">@item.PhoneNumber</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                location_on
                            </span>
                            <span class="me-2">Address: </span>
                            <span class="h6">@item.Address</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                location_on
                            </span>
                            <span class="me-2">Zipcode: </span>
                            <span class="h6">@item.ZipCode</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                check_circle
                            </span>
                            <span class="me-2">Request Status: </span>
                            <span class="h6">@item.RequestStatus</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                person
                            </span>
                            <span class="me-2">Provider: </span>
                            <span class="h6">@item.PhysicianName</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                assignment
                            </span>
                            <span class="me-2">Provider Note: </span>
                            <span class="h6">@item.PhysicianNote</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                assignment
                            </span>
                            <span class="me-2">Provider Cancellation Note: </span>
                            <span class="h6">@item.CancelledByProviderNote</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                assignment
                            </span>
                            <span class="me-2">Admin Note: </span>
                            <span class="h6">@item.AdminNote</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                assignment
                            </span>
                            <span class="me-2">Cancellation Reason: </span>
                            <span class="h6">@item.CancellationReason</span>
                        </div>

                        <div class="mb-2 mb-sm-3 d-flex align-items-center">
                            <span class="material-symbols-outlined border-circle text-info me-1">
                                assignment
                            </span>
                            <span class="me-2">Patient Note: </span>
                            <span class="h6">@item.PatientNote</span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a class="btn btn-outline-info">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @if (Pager.TotalPages > 0)
    {
        <ul class="pagination py-3 justify-content-center flex-wrap">

            @if (Pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link page-number page-first" data-page-number="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link page-number page-previous" data-page-number="@(Pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pg = Pager.StartPage; pg <= Pager.EndPage; pg++)
            {
                <li class="page-item @(pg == Pager.CurrentPage ? "active" : "")">
                    <a class="page-link page-number" data-page-number="@pg">@pg</a>
                </li>
            }

            @if (Pager.CurrentPage < Pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link page-number page-next" data-page-number="@(Pager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link page-number page-last" data-page-number="@Pager.TotalPages">Last</a>
                </li>
            }
        </ul>
    }
</div>