@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

@section AddStyles
    {
    <style>
        tr {
            vertical-align: middle;
            font-weight: 500;
        }

            tr p {
                margin: 0;
            }

        .selectlist {
            width: 30%;
        }

        @@media screen and (max-width: 767px) {
            .selectlist {
                width: 100%;
            }
        }

        input[type="checkbox"] {
            width: 15px;
            height: 15px;
        }
    </style>
}

<div class="main">
    <partial name="_NavbarLinks">

        <div class="container-xl p-4">

            <h2 class="mb-4">
                Provider Information
            </h2>

            <div class="providersSection bg-white rounded-3 shadow">
                <div class="searchSection p-3 mb-2 d-flex flex-column flex-md-row justify-content-between align-items-center">
                    <select class="form-select selectlist mb-3 mb-md-0">
                    </select>
                    <a class="btn btn-info text-white px-3">Create Provider Account</a>
                </div>

                <div class="partial-container">
                    
                </div>
            </div>

        </div>

</div>

